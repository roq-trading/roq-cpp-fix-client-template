      "description": "target comp id"
    },
    {
      "name": "sender_comp_id",
      "type": "std::string",
      "required": true,
      "description": "sender comp id"
    },
    {
      "name": "username",
      "type": "std::string",
      "required": true,
      "description": "username"
    },
    {
      "name": "password",
      "type": "std::string",
      "description": "password"
    },
    {
      "name": "decode_buffer_size",
